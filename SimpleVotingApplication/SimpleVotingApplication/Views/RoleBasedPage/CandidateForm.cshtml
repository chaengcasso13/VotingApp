@model SimpleVotingApplication.Models.CandidateModel

@{
    ViewData["Title"] = "CandidateForm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>CandidateForm</h1>

<h4>CandidateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCandidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CandidateFname" class="control-label"></label>
                <input asp-for="CandidateFname" class="form-control" />
                <span asp-validation-for="CandidateFname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CandidateMname" class="control-label"></label>
                <input asp-for="CandidateMname" class="form-control" />
                <span asp-validation-for="CandidateMname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CandidateLname" class="control-label"></label>
                <input asp-for="CandidateLname" class="form-control" />
                <span asp-validation-for="CandidateLname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth" class="control-label"></label>
                <input asp-for="DateOfBirth" class="form-control" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Candidates">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
