                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="ViewVoters" asp-controller="Voter">View Voters</a>
                                    <a class="dropdown-item" asp-action="DeleteVoters" asp-controller="Voter">Delete Voters</a>
                                </div>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Election</a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" asp-action="AddElection" asp-controller="Election">Add Election Date</a>
                                    <a class="dropdown-item" asp-action="ViewElection" asp-controller="Election">View Elections</a>
                                </div>
                            </li>@*
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Transactions" asp-controller="Candidate">Transactions</a>
                            </li>*@

                            <li class="nav-item">
                                <form class="nav-item" asp-action="Logout" asp-controller="Login">
                                    <input type="submit" value="Logout @User.Identity.Name" class="nav-item" />
                                    @*<a class="nav-link" asp-action="logout" asp-controller="Login">
                                Logout @User.Identity.Name
                                </a>*@
                                </form>
                                @*<a class="nav-link" asp-action="Logout" asp-controller="Login">
                                        Logout @User.Identity.Name
                                </a>*@
