                        }
                        else
                        {
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            <a class="nav-link" asp-area="" asp-controller="VotingTransaction" asp-action="TallyVotes">Election Status</a>
                            <a class="nav-link" asp-action="Vote" asp-controller="VotingTransaction">Vote</a>
                            <a class="nav-link" asp-area="" asp-controller="Login" asp-action="Register">Register</a>
