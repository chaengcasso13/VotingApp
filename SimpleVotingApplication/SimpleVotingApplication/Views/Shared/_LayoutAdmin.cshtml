                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        

                        <!--IF SIGNED IN-->
                        @if (signInManager.IsSignedIn(User))
