                                <a class="nav-link" asp-action="Index" asp-controller="Home">
                                    Home
                                </a>
                            </li>*@

                            <li class="nav-item">
                                <a class="nav-link" asp-action="TallyVotes" asp-controller="VotingTransaction">
                                    Election Status
